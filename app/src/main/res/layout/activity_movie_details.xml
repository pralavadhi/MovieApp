<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Poster with rounded bottom corners -->
        <ImageView
            android:id="@+id/imageViewPoster"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="20dp"
            android:contentDescription="Movie Poster" />

        <!-- Title -->
        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movie Title"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <!-- Metadata -->
        <TextView
            android:id="@+id/textViewYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Year: 2023"
            android:textSize="15sp"
            android:textColor="#CCCCCC"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/textViewGenre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Genre: Action, Drama"
            android:textSize="15sp"
            android:textColor="#CCCCCC"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/textViewDirector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Director: Christopher Nolan"
            android:textSize="15sp"
            android:textColor="#CCCCCC"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/textViewStudio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Studio: N/A"
            android:textSize="15sp"
            android:textColor="#CCCCCC"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/textViewRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating: 8.2"
            android:textSize="15sp"
            android:textColor="#CCCCCC"
            android:layout_marginBottom="16dp" />

        <!-- Plot -->
        <TextView
            android:id="@+id/textViewPlot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plot: ..."
            android:textSize="15sp"
            android:textColor="#AAAAAA"
            android:lineSpacingExtra="6dp"
            android:layout_marginBottom="24dp" />

        <!-- Back Button -->
        <Button
            android:id="@+id/buttonBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="#FFFFFF"
            android:backgroundTint="#6C63FF"
            android:paddingHorizontal="24dp"
            android:paddingVertical="8dp"
            android:textSize="15sp"
            android:layout_gravity="start" />
    </LinearLayout>
</ScrollView>
